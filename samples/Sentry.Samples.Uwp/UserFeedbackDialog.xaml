<ContentDialog
    x:Class="Sentry.Samples.Uwp.UserFeedbackDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="User Feedback"
    PrimaryButtonText="Close"
    SecondaryButtonText="Send"
    PrimaryButtonClick="ContentDialog_CloseButtonClick"
    SecondaryButtonClick="ContentDialog_SendButtonClick">

    <StackPanel>
        
        <TextBlock Text="Name"/>
        <TextBox x:Name="NameBox"
            PlaceholderText="Jane Doe"/>
        <TextBlock Text="Email*"/>
        <TextBox x:Name="EmailBox"
            PlaceholderText="jane@example.com"/>
        <TextBlock Text="Comment*"/>
        <TextBox x:Name="CommentBox"
            PlaceholderText="I clicked 'X' and then hit 'Confirm'"
            Height="100    "/>
    </StackPanel>
</ContentDialog>
