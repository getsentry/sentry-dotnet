<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net9.0;net8.0</TargetFrameworks>
    <RootNamespace>Sentry.AspNetCore.Blazor.WebAssembly</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Sentry.Extensions.Logging\Sentry.Extensions.Logging.csproj" />
    <ProjectReference Include="..\Sentry\Sentry.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="8.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)buildTransitive\Sentry.AspNetCore.Blazor.WebAssembly.targets" Pack="true" PackagePath="buildTransitive\Sentry.AspNetCore.Blazor.WebAssembly.targets" />
    <None Include="$(MSBuildThisFileDirectory)buildTransitive\Sentry.AspNetCore.Blazor.WebAssembly.targets" Pack="true" PackagePath="build\Sentry.AspNetCore.Blazor.WebAssembly.targets" />
  </ItemGroup>
</Project>
