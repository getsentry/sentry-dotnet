<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <Description>Official OpenTelemetry ASP.NET Core integration for Sentry - Open-source error tracking that helps developers monitor and fix crashes in real time.</Description>
      <PackageTags>$(PackageTags);AspNetCore;MVC;OpenTelemetry</PackageTags>
      <TargetFramework>net6.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="OpenTelemetry" Version="1.5.0" />
      <PackageReference Include="OpenTelemetry.Extensions.Hosting" Version="1.5.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Sentry.AspNetCore\Sentry.AspNetCore.csproj" />
      <ProjectReference Include="..\Sentry.OpenTelemetry\Sentry.OpenTelemetry.csproj" />
    </ItemGroup>

</Project>
