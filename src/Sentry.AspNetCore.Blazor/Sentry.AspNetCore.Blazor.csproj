<Project Sdk="Microsoft.NET.Sdk.Razor">

<PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <NoWarn>$(NoWarn);CS1591</NoWarn>
    <SentryJavaScriptVersion>7.64.0</SentryJavaScriptVersion>
</PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Sentry.Extensions.Logging\Sentry.Extensions.Logging.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0" />
  </ItemGroup>

    <!-- Download JS SDK from CDN: https://docs.sentry.io/platforms/javascript/install/loader/#cdn -->
  <Target Name="DownloadSentryJavaScript" BeforeTargets="Build">
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.tracing.replay.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrorsReplayPerformance" />
    </DownloadFile>
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.replay.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrorsReplay" />
    </DownloadFile>
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.tracing.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrorsPerformance" />
    </DownloadFile>
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrors" />
    </DownloadFile>
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.tracing.replay.debug.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrorsReplayPerformanceDebug" />
    </DownloadFile>
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.replay.debug.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrorsReplayDebug" />
    </DownloadFile>
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.tracing.debug.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrorsPerformanceDebug" />
    </DownloadFile>
    <DownloadFile SourceUrl="https://browser.sentry-cdn.com/$(SentryJavaScriptVersion)/bundle.debug.min.js" DestinationFolder="wwwroot" Retries="2">
      <Output TaskParameter="DownloadedFile" ItemName="SentryJavaScriptErrorsDebug" />
    </DownloadFile>
  </Target>

</Project>
