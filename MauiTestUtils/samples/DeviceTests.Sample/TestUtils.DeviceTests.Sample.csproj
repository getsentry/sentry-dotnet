<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows'))">net6.0-android;net6.0-windows10.0.19041.0</TargetFrameworks>
    <TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('OSX'))">net6.0-android;net6.0-ios;net6.0-maccatalyst</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <SingleProject>true</SingleProject>
    <RootNamespace>Microsoft.Maui.TestUtils.DeviceTests.Sample</RootNamespace>
    <AssemblyName>Microsoft.Maui.TestUtils.DeviceTests.Sample</AssemblyName>
    <UseMaui>true</UseMaui>
  </PropertyGroup>

  <PropertyGroup>
    <ApplicationTitle>Tests Sample</ApplicationTitle>
    <ApplicationId>com.microsoft.maui.testutils.devicetests</ApplicationId>
    <ApplicationVersion>1</ApplicationVersion>
  </PropertyGroup>

  <ItemGroup>
    <MauiIcon Include="Resources\appicon.svg" ForegroundFile="Resources\appiconfg.svg" Color="#512BD4" />
    <MauiSplashScreen Include="Resources\appiconfg.svg" Color="#512BD4" BaseSize="128,128" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\DeviceTests\TestUtils.DeviceTests.csproj" />
    <ProjectReference Include="..\..\src\DeviceTests.Runners\TestUtils.DeviceTests.Runners.csproj" />
    <ProjectReference Include="..\..\src\DeviceTests.Runners.SourceGen\TestUtils.DeviceTests.Runners.SourceGen.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
  </ItemGroup>

  <!-- https://github.com/dotnet/maui/blob/main/.nuspec/Microsoft.Maui.TestUtils.DeviceTests.Runners.targets -->
  <ItemGroup>
    <CompilerVisibleProperty Include="RootNamespace" />
    <CompilerVisibleProperty Include="ApplicationId" />
    <CompilerVisibleProperty Include="ApplicationTitle" />
    <CompilerVisibleItemMetadata Include="AdditionalFiles" MetadataName="IsMauiSplashScreen" />
    <AdditionalFiles Include="@(MauiSplashScreen)" IsMauiSplashScreen="True" />
  </ItemGroup>

</Project>
